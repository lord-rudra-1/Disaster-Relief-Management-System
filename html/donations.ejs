<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donations</title>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea, #764ba2);
            margin: 0;
            padding: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background: white;
            padding: 30px;
            max-width: 400px;
            width: 100%;
            border-radius: 12px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        h1 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        label {
            text-align: left;
            font-weight: 600;
            margin-bottom: 5px;
            display: block;
        }

        input[type="number"],
        input[type="text"] {
            padding: 10px;
            margin-bottom: 15px;
            width: calc(100% - 20px);
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
            transition: 0.3s ease;
        }

        input:disabled {
            background: #f0f0f0;
            cursor: not-allowed;
        }

        .checkbox-group {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .checkbox-group label {
            display: flex;
            align-items: center;
            font-weight: normal;
            cursor: pointer;
        }

        .checkbox-group input {
            margin-right: 8px;
        }

        button {
            background: #764ba2;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s ease;
        }

        button:hover {
            background: #5a3d81;
        }
    </style>

    <script>
        function toggleFields(selectedType) {
            const amountCheckbox = document.getElementById("donate_cash");
            const resourceCheckbox = document.getElementById("donate_resource");

            const amountField = document.getElementById("amount");
            const categoryField = document.getElementById("category_id");
            const quantityField = document.getElementById("quantity");

            if (selectedType === "cash") {
                resourceCheckbox.checked = false;
                amountField.disabled = false;
                categoryField.disabled = true;
                quantityField.disabled = true;
                categoryField.value = "";
                quantityField.value = "";
            } else if (selectedType === "resource") {
                amountCheckbox.checked = false;
                amountField.disabled = true;
                categoryField.disabled = false;
                quantityField.disabled = false;
                amountField.value = "";
            }
        }
    </script>
</head>

<body>

    <div class="container">
        <h1>Make a Donation</h1>

        <form action="/donations" method="POST">

            <!-- Donor ID -->
            <label for="donor_id">Donor ID:</label>
            <input type="number" name="donor_id" id="donor_id" placeholder="Enter Donor ID" required>

            <!-- Donation Type -->
            <label>Choose Donation Type:</label>
            <div class="checkbox-group">
                <label>
                    <input type="checkbox" id="donate_cash" name="donate_type" value="cash" onclick="toggleFields('cash')">
                    Cash
                </label>
                <label>
                    <input type="checkbox" id="donate_resource" name="donate_type" value="resource" onclick="toggleFields('resource')">
                    Resources
                </label>
            </div>

            <!-- Amount -->
            <label for="amount">Amount:</label>
            <input type="number" step="0.01" name="amount" id="amount" placeholder="Enter amount" disabled>

            <!-- Resource Category -->
            <label for="category_id">Resource Category ID:</label>
            <input type="number" name="category_id" id="category_id" placeholder="Enter Resource Category ID" disabled>

            <!-- Quantity -->
            <label for="quantity">Quantity:</label>
            <input type="number" name="quantity" id="quantity" placeholder="Enter quantity" disabled>

            <!-- Allocated To -->
            <label for="allocated_to">Allocated To (Area ID):</label>
            <input type="number" name="allocated_to" id="allocated_to" placeholder="Enter Area ID">

            <button type="submit">Submit Donation</button>
        </form>
    </div>

</body>

</html>