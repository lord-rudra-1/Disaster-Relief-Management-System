<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database Tables</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
    <h1 class="text-center mb-4">Database Tables</h1>

    <% let tables = { 
        'Affected Areas': affectedAreas, 
        'Volunteers': volunteers, 
        'Donors': donors, 
        'Donations': donations, 
        'Resources': resources, 
        'Resource Categories': resourceCategories, 
        'Assignments': assignments 
    }; %>

    <% for (let tableName in tables) { %>
        <div class="card mb-4">
            <div class="card-header">
                <h3><%= tableName %></h3>
            </div>
            <div class="card-body">
                <% if (tables[tableName].length > 0) { %>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <% Object.keys(tables[tableName][0].dataValues).forEach(key => { %>
                                    <th><%= key %></th>
                                <% }); %>
                            </tr>
                        </thead>
                        <tbody>
                            <% tables[tableName].forEach(row => { %>
                                <tr>
                                    <% Object.values(row.dataValues).forEach(value => { %>
                                        <td><%= value %></td>
                                    <% }); %>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p class="text-muted">No data available.</p>
                <% } %>
            </div>
        </div>
    <% } %>

</body>
</html>
