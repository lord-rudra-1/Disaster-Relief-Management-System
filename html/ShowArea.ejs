<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Affected Areas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
    <h1 class="text-center mb-4">Affected Areas</h1>

    <% if (affectedAreas.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <% Object.keys(affectedAreas[0].dataValues).forEach(key => { %>
                        <th><%= key %></th>
                    <% }); %>
                </tr>
            </thead>
            <tbody>
                <% affectedAreas.forEach(area => { %>
                    <tr>
                        <% Object.values(area.dataValues).forEach(value => { %>
                            <td><%= value %></td>
                        <% }); %>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-muted">No affected areas found.</p>
    <% } %>

</body>
</html>