<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Affected Areas</title>
    <style>
        body {
            background-color: white;
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid black;
            padding: 10px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Affected Areas</h1>
    <table>
        <tr>
            <th>Location</th>
            <th>Disaster Type</th>
            <th>Severity</th>
            <th>Population</th>
            <th>Casualties</th>
            <th>Immediate Needs</th>
            <th>Status</th>
        </tr>
        <% affectedAreas.forEach(area => { %>
        <tr>
            <% if(area.status == "Active"){ %>
            <td><%= area.location %></td>
            <td><%= area.disaster_type %></td>
            <td><%= area.severity %></td>
            <td><%= area.population %></td>
            <td><%= area.casualties %></td>
            <td><%= area.immediate_needs %></td>
            <td><%= area.status %></td>
            <% } %>
        </tr>
        <% }) %>
    </table>
</body>
</html>